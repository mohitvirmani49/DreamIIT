<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_main_doubt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/cardview_color"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_color"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/display_image5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:text="Hi"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/display_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/display_image5"
                android:layout_weight="1"
                android:text="My name is lakhan"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/myvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/display_image5"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                android:layout_below="@+id/display_name5"
                android:layout_marginBottom="5dp"
                android:text="Hi"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" |  "
                android:layout_toRightOf="@+id/display_name5"
                android:textColor="#130008"
                android:textSize="15dp"
                android:id="@+id/sep"/>

            <TextView
                android:id="@+id/mention_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" |  Hello Hi"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/sep"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/date_doubt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:text="Name"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

    </LinearLayout>

</androidx.cardview.widget.CardView>