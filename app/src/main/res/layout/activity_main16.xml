<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main16Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask your doubts here"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/txt"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="15dp"
        android:id="@+id/my_ques"
        android:src="@drawable/image"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:hint="Ask Here"
        android:textAlignment="center"
        android:id="@+id/ask_doubt"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/attach"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/attach"
        android:layout_marginRight="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask your Doubt here"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/attach"
        android:id="@+id/doub"
        android:layout_marginRight="10dp"/>
    
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_topic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"/>
    
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_prog"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>





</RelativeLayout>