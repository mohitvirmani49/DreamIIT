<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="03:00"
        android:textSize="40dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/qstns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="Question"
        android:textAlignment="center"
        android:textSize="20sp" />



        <Button
            android:id="@+id/radio_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:layout_below="@+id/qstns"
            android:layout_marginTop="50dp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/radio_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:layout_below="@id/radio_btn1"
            android:layout_marginTop="20dp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/radio_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:layout_below="@+id/radio_btn2"
            android:layout_marginTop="20dp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/radio_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:layout_below="@id/radio_btn3"
            android:layout_marginTop="20dp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@+id/radio_btn4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"/>


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/radio_btn4"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
