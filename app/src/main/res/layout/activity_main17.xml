<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doubt_background"
    tools:context=".Main17Activity">


    <ImageButton
        android:id="@+id/pop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#00000000"
        android:onClick="showPopup1"
        android:src="@drawable/popup"

        />

    <ImageButton
        android:id="@+id/question_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/pop1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_image"
        android:layout_marginStart="10dp"
        android:text="Question Text"

        android:textSize="25dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/answer_pg_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/question_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/answer_pg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/answer_pg_image"
        android:text="User name"
        android:textAllCaps="false"
        android:textSize="15dp" />

    <Button
        android:id="@+id/answer_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:background="@drawable/answer_btn"
        android:elevation="10dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#FFFFFF"
        android:text="Answer" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/answer_pg_name"
        android:layout_marginTop="50dp"
        android:id="@+id/answer_recycler"/>



</RelativeLayout>
