<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main8Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/img"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qstns"
            android:text="hi"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />



    </FrameLayout>


    <Button
        android:id="@+id/radio_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:layout_below="@+id/fl1"
        android:layout_marginTop="50dp"
        android:background="#003366"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/radio_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:layout_below="@id/radio_btn1"
        android:layout_marginTop="20dp"
        android:background="#003366"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/radio_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 3"
        android:layout_below="@+id/radio_btn2"
        android:layout_marginTop="20dp"
        android:background="#003366"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/radio_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 4"
        android:layout_below="@id/radio_btn3"
        android:layout_marginTop="20dp"
        android:background="#003366"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@+id/radio_btn4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"/>


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/radio_btn4"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>